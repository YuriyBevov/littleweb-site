include ../../cards/review-card/review-card
include ../../cards/portfolio-card/portfolio-card

mixin main-slider(data)
  .swiper.main-slider(class= data.cls ? data.cls : null)
    .swiper-wrapper
      each slide in data.slides
        .swiper-slide
          if data.type === 'review'
            +review-card(slide)
          if data.type === 'portfolio'
            +portfolio-card(slide)

    .swiper-controls
      if data.options.pagination
        .swiper-pagination

      if data.options.navigation
        .swiper-navigation
          .swiper-button-prev
            svg(width="16" height="16")
              use(xlink:href="../assets/svg-sprite.svg#icon-slider-arrow")
          .swiper-button-next
            svg(width="16" height="16")
              use(xlink:href="../assets/svg-sprite.svg#icon-slider-arrow")



