extends ../../layouts/base-section/base-section.pug
include ../../components/main-btn/main-btn

block variables
  - sectionClass = "workflow lw-separator"
  - sectionTitle = 'Как происходит рабочий <span>процесс</span>'

block content
  include ../../content/workflow-list
  include ../../components/cards/info-card/info-card

  ul.base-list
    each workflow in workflowList
      li
        +info-card(workflow)

  +main-btn({
    class: 'main-btn--outlined base-section__btn',
    text: 'Связаться с нами',
    modal: 'callback'
  })
