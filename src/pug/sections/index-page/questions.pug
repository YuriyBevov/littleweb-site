extends ../../layouts/base-section/base-section.pug
include ../../components/main-btn/main-btn

block variables
  - sectionClass = "questions"

block left
  h1.base-title Ответы на частые вопросы


  +main-btn({
    class: 'main-btn--outlined hidden-laptop-down',
    text: 'Оставить отзыв',
    modal: 'callback'
  })

block right
  include ../../content/question-list
  include ../../components/accordeons/main-accordeon/main-accordeon

  +main-accordeon(questionList)

  +main-btn({
    class: 'main-btn--outlined hidden-laptop-up',
    text: 'Оставить отзыв',
    modal: 'callback'
  })
